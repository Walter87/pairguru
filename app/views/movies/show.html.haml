%h1= movie.title
.jumbotron
  = movie.description
  %p= movie_info.overview
  %p= movie_info.vote_average
  %p= image_tag "https://image.tmdb.org/t/p/w500#{movie_info.poster_path}"
- if user_signed_in?
  %p= link_to 'Email me details about this movie', send_info_movie_path(movie), class: 'btn btn-sm btn-default'
